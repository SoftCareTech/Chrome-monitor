{
    "name": "Events Observer",
    "version": "1.0",
    "description": "Build an Extension for monitoring activities.... ",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "go.png"
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "css": ["myStyles.css"],
        "js": ["contentScript.js"]
    }],
    "manifest_version": 2
}